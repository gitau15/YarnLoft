{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/shared/*": ["../../packages/shared/src/*"],
      "@/db/*": ["../../packages/db/src/*"],
      "@yarnloft/shared": ["../../packages/shared/src"],
      "@yarnloft/db": ["../../packages/db/src"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/db"
    }
  ]
}