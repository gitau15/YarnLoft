{
  "name": "yarnloft",
  "version": "1.0.0",
  "description": "The Global Hub for the Fiber Arts Community",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --parallel",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "db:generate": "npm run db:generate --workspace=packages/db",
    "db:push": "npm run db:push --workspace=packages/db",
    "db:migrate": "npm run db:migrate --workspace=packages/db",
    "db:seed": "npm run db:seed --workspace=packages/db",
    "db:studio": "npm run db:studio --workspace=packages/db",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0",
  "keywords": [
    "yarn",
    "knitting",
    "crochet",
    "fiber",
    "crafts",
    "ecommerce",
    "community",
    "nextjs",
    "typescript"
  ],
  "author": "YarnLoft Team",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}